    @model ICollection<NewKinoHub.Storage.Entity.Person>

<html style="font-size: 16px;">

<body>
    <div class="u-clearfix u-sheet u-sheet-1 wrapper">
        <div style="margin-top:50px; margin-bottom:30px; width: 95%;">
            <table style="margin: 0 auto;">
                <tbody>
                    <tr>
                        <td style="right:0%;">
                            <nav id="menu1" style="margin-left:50px;">
                                <ul>
                                    <li style="width: 15% !important;">
                                        <a style="background-color:black !important; color:white !important;">Сортировать: </a>@*кнопка*@
                                    </li>
                                    <li style="width: 26% !important;">
                                        <a>По дате рождения</a>
                                        <ul>
                                            @*что выпадает при наведении на кнопку дата выхода*@

                                            <li>
                                                <a href=@Url.Action("ListPersons", "Persons", new { sort = "YearOld", type = "Film"})>По возрастанию</a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("ListPersons", "Persons", new { sort = "YearNew",type = "Film" })>По убыванию</a>
                                            </li>
                                        </ul>
                                    </li>
                                    @*<li style="width: 24% !important;">
                                        <a href=@Url.Action("ListPersons", "Persons", new { sort = "Score",type = "Film" })>По рейтингу</a>
                                    </li>*@
                                    <li style="width:26% !important;">
                                        <a>По названию</a>
                                        <ul>
                                            @*что выпадает при наведении на кнопку дата выхода*@

                                            <li>
                                                <a href=@Url.Action("ListPersons", "Persons", new { sort = "NameA",type = "Film" })>А-Я</a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("ListPersons", "Persons", new { sort = "NameZ",type = "Film" })>Я-А</a>
                                            </li>
                                        </ul>
                                    </li>

                                    @* здесь можно добавить еще кнопку как дата выхода*@
                                    @*если не работает, позвать меня*@
                                </ul>
                            </nav>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        @foreach (var Person in Model)
        {
            <div style="width: 1100px; min-height: 380px; margin-bottom:20px;">
                <a href=@Url.Action("Person", "Persons", new { personId = Person.Id }) style="display:block; width : 250px; float : left; margin-right : 20px; height:inherit;">
                    <img height="395" width="265" class="u-back-image u-expanded imagetitle" src=@Person.Image>
                </a>
                <div class="bglistcast" style=" width:800px;min-height:395px;float:right; padding-left:10px;">
                    <table style="width: 780px; color:black;">
                        <tbody>
                            <tr>
                                <td style="width: 400px;">
                                    <p style="font-weight: bold; right:100%; left:0%;"> @Person.Name </p>

                                    <p>
                                        <span style="font-weight:bold">Карьера:</span>
                                        @if (Person.IsActor != false)
                                        {<a> Актёр </a>}
                                        @if (Person.IsDirector != false)
                                        {<a> Режиссёр </a>}
                                        @if (Person.IsScreenWriter != false)
                                        {<a> Сценарист </a>}
                                    </p>
                                    @if (Person.DateOfBirthday.Year != 0001)
                                    {
                                        <p>
                                            <span style="font-weight:bold">Дата рождения:</span> @Person.DateOfBirthday.ToShortDateString()
                                        </p>
                                    }
                                    @if (Person.Age != -1)
                                    {
                                        @if (Person.Age % 10 == 2 || Person.Age % 10 == 3 || Person.Age % 10 == 4)
                                        {
                                            <p> <span style="font-weight:bold">Возраст:</span> @Person.Age года</p>
                                        }
                                        else if (Person.Age % 10 == 1)
                                        {
                                            <p> <span style="font-weight:bold">Возраст:</span> @Person.Age год</p>
                                        }
                                        else
                                        {
                                            <p> <span style="font-weight:bold">Возраст:</span> @Person.Age лет</p>
                                        }
                                    }

                                    @if (Person.DateOfDeath.Year != 0001)
                                    {
                                        <p> <span style="font-weight:bold">Дата смерти:</span> @Person.DateOfDeath.ToShortDateString()</p>
                                    }
                                </td>
                                @if (ViewBag.Role == 1)
                                {
                                    <td align="right" valign="top" width="30">
                                        <a href=@Url.Action("EditPerson", "Persons", new { personId = Person.Id})>
                                            <img class="deleteicon" src="~/lib/images/Icons/edit.png" />
                                        </a>
                                    </td>
                                    <td valign="top" align="right" width="30">
                                        <a href=@Url.Action("DeletePerson", "Persons", new { IdPerson = Person.Id})>
                                            <img class="deleteicon" src="~/lib/images/Icons/close.png" />
                                        </a>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>


                <div style=" clear:both;"></div>
            </div>
        }
    </div>
</body>
</html>

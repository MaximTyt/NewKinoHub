                                    <div class="slide s1">
                                        <a href=@Url.Action("Film", "Films", new { IdFilm = Model.Item1[0].MediaID }) style="display:block;">
                                            <img src=@Model.Item1[0].Img style="height:500px !important;">
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="slide s1">

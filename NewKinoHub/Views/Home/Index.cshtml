@model (List<NewKinoHub.Storage.Entity.Media>, List<NewKinoHub.Storage.Entity.Media>)

<html style="font-size: 16px;">
<head>
    <link href="~/css/bootStrap/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Style.css" rel="stylesheet" /> @*не переносить в layout*@
</head>

<body style=" background-color : black;">
    <div class="wrapper">
        <table style="width: 100%; height:100%; max-height:600px; max-width: 1100px; margin: 0 auto; margin-top:20px;">
            <tbody>
                <tr style="height:50px;">
                    <td colspan="2">
                        <h3 style="color:white; width: 100%; max-width: 1125px;">Новинки на сайте:</h3>
                    </td>
                </tr>
                <tr style="height:550px;">
                    <td>
                        <h3 style="color:white;">Фильмы</h3>
                        <div class="slider middle" style="left:0%; right:100%;">
                            <div class="slides">
                                <input type="radio" name="r" id="r1" checked>
                                <input type="radio" name="r" id="r2">
                                <input type="radio" name="r" id="r3">
                                <input type="radio" name="r" id="r4">
                                <div class="slide s1">
                                    <a href=@Url.Action("Film", "Films", new { IdFilm = Model.Item1[0].MediaID }) style="display:block;">
                                        <img src=@Model.Item1[0].Img style="height:500px;">
                                    </a>
                                </div>
                                <div class="slide">
                                    <a href=@Url.Action("Film", "Films", new { IdFilm = Model.Item1[1].MediaID }) style="display:block;">
                                        <img src=@Model.Item1[1].Img alt="" style="height:500px;">
                                    </a>
                                </div>
                                @*<div class="slide">
                                    <a href=@Url.Action("Film", "Films", new { IdFilm = Model.Item1[2].MediaID }) style="display:block;">
                                        <img src=@Model.Item1[2].Img alt="" style="height:500px;">
                                    </a>
                                </div>
                                <div class="slide">
                                    <a href=@Url.Action("Film", "Films", new { IdFilm = Model.Item1[3].MediaID }) style="display:block;">
                                        <img src=@Model.Item1[3].Img alt="" style="height:500px;">
                                    </a>
                                </div>*@
                            </div>
                            <div class=" navigation">
                                <label for="r1" class=" bar"></label>
                                <label for="r2" class=" bar"></label>
                                <label for="r3" class=" bar"></label>
                                <label for="r4" class=" bar"></label>
                            </div>
                        </div>
                    </td>
                    <td>
                        <h3 style="color:white;">Сериалы</h3>
                        <div class="slider middle" style="left:100%; right:0%;">
                            <div class="slides">
                                <input type="radio" name="r" id="r5" checked>
                                <input type="radio" name="r" id="r6">
                                <input type="radio" name="r" id="r7">
                                <input type="radio" name="r" id="r8">
                                <div class="slide s1">
                                    <a href=@Url.Action("Serial", "Films", new { SerialId = Model.Item2[0].MediaID }) style="display:block;">
                                        <img src=@Model.Item2[0].Img style="height:500px;">
                                    </a>
                                </div>
                                @*<div class="slide">
                                    <a href=@Url.Action("Serial", "Serials", new { SerialId = Model.Item2[1].MediaID }) style="display:block;">
                                        <img src=@Model.Item2[1].Img alt="" style="height:500px;">
                                    </a>
                                </div>
                                <div class="slide">
                                    <a href=@Url.Action("Serial", "Serials", new { SerialId = Model.Item2[2].MediaID }) style="display:block;">
                                        <img src=@Model.Item2[2].Img alt="" style="height:500px;">
                                    </a>
                                </div>
                                <div class="slide">
                                    <a href=@Url.Action("Serial", "Serials", new { SerialId = Model.Item2[3].MediaID }) style="display:block;">
                                        <img src=@Model.Item2[3].Img alt="" style="height:500px;">
                                    </a>
                                </div>*@
                            </div>
                            <div class=" navigation">
                                <label for="r5" class=" bar"></label>
                                <label for="r6" class=" bar"></label>
                                <label for="r7" class=" bar"></label>
                                <label for="r8" class=" bar"></label>
                            </div>
                        </div>
                    </td>

                </tr>
            </tbody>
        </table>
        <script src="~/js/bootstrap/bootstrap.bundle.min.js"></script>
    </div>
</body>
</html>

@model NewKinoHub.Storage.Entity.RegisterModel
    <head>
        <link rel="stylesheet" href="~/css/Profil.css" /> @*стили для регистрации/профиля/логина*@
    </head>
    <body>
        <div class="wrapper">
            <h2 style="color:white;">Регистрация</h2>

            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div>
                        <label style="color:white;" asp-for="Nickname">Введите Никнейм</label><br />
                        <input type="text" asp-for="Nickname" />                        
                    </div>
                    <div>
                        <label style="color:white;" asp-for="Email">Введите Email</label><br />
                        <input type="text" asp-for="Email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div>
                        <label style="color:white;" asp-for="Password">Введите пароль</label><br />
                        <input asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div>
                        <label style="color:white;" asp-for="PasswordConfirm">Повторите пароль</label><br />
                        <input asp-for="PasswordConfirm" />
                        <span asp-validation-for="PasswordConfirm" />
                    </div>
                    <div>
                        <input style="color: rgb(247,151,30)" type="submit" value="Регистрация" class="btn btn-outline-dark" />
                    </div>
                </div>
            </form>
            <div>
                <center>
                    <h4 style="color:aliceblue">Уже зарегистрированы? <a asp-action="Login" asp-controller="Account" class="btn_register">Войти</a></h4>
                </center>
            </div>
        </div>
    </body>
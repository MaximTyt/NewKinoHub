@model NewKinoHub.Storage.Entity.RegisterModel
    <body style="background-color:#1A1917 !important;">
        <div class="wrapper">
            <h2 style="color:white;">Регистрация</h2>

            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div>
                        <label style="color:white;" asp-for="Login">Введите Логин</label><br />
                        <input type="text" asp-for="Login" />
                        <span asp-validation-for="Login" />
                    </div>
                    <div>
                        <label style="color:white;" asp-for="Email">Введите Email</label><br />
                        <input type="text" asp-for="Email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div>
                        <label style="color:white;" asp-for="Password">Введите пароль</label><br />
                        <input asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div>
                        <label style="color:white;" asp-for="PasswordConfirm">Повторите пароль</label><br />
                        <input asp-for="PasswordConfirm" />
                        <span asp-validation-for="PasswordConfirm" />
                    </div>
                    <div>
                        <input type="submit" value="Регистрация" />
                    </div>
                </div>
            </form>
        </div>
    </body>
@model ICollection<NewKinoHub.Storage.Entity.Media>

<html style="font-size: 16px;">
<head>
    <link href="~/css/Profil.css" rel="stylesheet" />
</head>

<body>
    <div wrapper">
        @if (ViewBag.Role == 1)
        {
            <div style="position:absolute; top:5%; left:3%; ">
                <a href=@Url.Action("AddFilm", "Films") class="addfilm">+</a>
            </div>
        }
        <div style="margin-top:50px; margin-bottom:30px; width: 95%;">
            <table style="margin: 0 auto;">
                <tbody>
                    <tr>
                        <td style="width: 10% !important; left:0%;">
                            <h2 style="color: white;">Фильмы</h2>
                        </td>
                        <td style="right:0%;">
                            <nav id="menu1" style="margin-left:50px;">
                                <ul>
                                    <li style="width: 15% !important;">
                                        <a style="background-color:black !important; color:white !important;">Сортировать: </a>@*кнопка*@
                                    </li>
                                    <li style="width: 26% !important;">
                                        <a>По дате выхода</a>
                                        <ul>
                                            @*что выпадает при наведении на кнопку дата выхода*@

                                            <li>
                                                <a href=@Url.Action("ListFilms", "Films", new { sort = "YearOld", type = "Film"})>Сначала старые</a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("ListFilms", "Films", new { sort = "YearNew",type = "Film" })>Сначала новые</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li style="width: 24% !important;">
                                        <a href=@Url.Action("ListFilms", "Films", new { sort = "Score",type = "Film" })>По рейтингу</a>
                                    </li>
                                    <li style="width:26% !important;">
                                        <a>По названию</a>
                                        <ul>
                                            @*что выпадает при наведении на кнопку дата выхода*@

                                            <li>
                                                <a href=@Url.Action("ListFilms", "Films", new { sort = "NameA",type = "Film" })>А-Я</a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("ListFilms", "Films", new { sort = "NameZ",type = "Film" })>Я-А</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li style="width:26% !important;">
                                        <a>По создателем</a>
                                        <ul>
                                            @*что выпадает при наведении на кнопку дата выхода*@

                                            <li>
                                                <form action="/" method="post">
                                                    <select style="width:100px; height: 20px; font-size: 14px;">
                                                        <option value="value" style="font-size: 14px;">Актер</option>
                                                        <option value="value" style="font-size: 14px;">Режисер</option>
                                                        <option value="value" style="font-size: 14px;">Сценарист</option>
                                                    </select>
                                                    <input type="text" style="width:100px; height: 20px; font-size: 14px;" name="name" value="" />
                                                    <input type="submit" name="name" value="Применить" / style="width: 100px; height: 20px; background-color: rgb(247,151,30); color: black; font-size: 14px;">
                                                </form>
                                                
                                            </li>
                                             
                                        </ul>
                                    </li>
                                    @* здесь можно добавить еще кнопку как дата выхода*@
                                    @*если не работает, позвать меня*@


                                </ul>
                            </nav>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div style="margin-top:10px; width:1100px;" class="fav_block_films">
            @foreach (var film in Model.Where(st => st.MediaType == ViewBag.Type))
            {
            <div class="item_films">
                <p><a href=@Url.Action("Film", "Films", new { IdFilm = film.MediaID })><img width="300" height="400" class="imagetitle" src="data:image/jpeg;base64, @(Convert.ToBase64String(film.Img))"></a></p>
                <p style="margin-left:5px;"><a class="titlenamesize_list" href=@Url.Action("Film", "Films", new { IdFilm = film.MediaID })>@film.Name</a></p>
                <div class="descr">
                    <p><a href=@Url.Action("Film", "Films", new { IdFilm = film.MediaID })><img width="340" height="470" src=@film.Img></a></p>
                    <table width="90" align="right">
                        <tbody>
                            <tr>

                                @if (film.IsFavorites == false && ViewBag.User != null)
                                {
                                    <td width="20"><a><img class="deleteicon" src="~/lib/images/Icons/favourite.png" /></a></td>
                                }
                                else
                                {
                                    if (ViewBag.User != null)
                                    {
                                        <td width="20"><a><img class="deleteicon" src="~/lib/images/Icons/favourite11.png" /></a></td>
                                    }
                                    else
                                    {
                                        <td width="20"><a><img class="deleteicon" src="~/lib/images/Icons/favourite.png" /></a></td>
                                    }

                                }

                                @if (film.IsVieweds == false && ViewBag.User != null)
                                {
                                    <td width="20"><a><img class="deleteicon" src="~/lib/images/Icons/eye (1).png" /></a></td>
                                }
                                else
                                {
                                    if (ViewBag.User != null)
                                    {
                                        <td width="20"><a><img class="deleteicon" src="~/lib/images/Icons/eye.png" /></a></td>
                                    }
                                    else
                                    {
                                        <td width="20"><a><img class="deleteicon" src="~/lib/images/Icons/eye (1).png" /></a></td>
                                    }

                                }

                                @if (ViewBag.Role == 1)
                                {
                                    <td width="20">
                                        <a href=@Url.Action("EditFilm", "Films", new { Id = film.MediaID })>
                                            <img class="deleteicon" src="~/lib/images/Icons/edit.png" />
                                        </a>
                                    </td>
                                }

                                @if (ViewBag.Role == 1)
                                {
                                    <td width="20">
                                        <a href=@Url.Action("DeleteFilm", "Films", new { IdFilm = film.MediaID })>
                                            <img class="deleteicon" src="~/lib/images/Icons/close.png" />
                                        </a>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                    <p style="color:white;"> @film.ShortDescription</p>
                    <div class="rating_value">@(Convert.ToString(film.Score).Replace(',', '.')) @*Оценено: @Model.Reviews.Count*@</div>
                </div>
            </div>

                @*<div style="width: 1100px; min-height: 380px; margin-bottom:20px;">
                <a href=@Url.Action("Film", "Films", new { IdFilm = film.MediaID }) style="display:block; width : 250px; float : left; margin-right : 20px; height:inherit;">
                    <img class="u-back-image u-expanded imagetitle imglist" src=@film.Img>
                </a>
                <div class="bgtitleopacity" style=" width:800px;min-height:395px;float:right; padding-left:10px;">
                    <table style="width: 780px;">
                        <tbody>
                            <tr>
                                <td style="width: 400px;">
                                    <p style="font-weight: bold; right:100%; left:0%;"> @film.Name </p>
                                </td>

                               

                            </tr>
                        </tbody>
                    </table>
                    <p><span style="font-weight:bold">Год:</span> @film.Year</p>
                    <p>
                        <span style="font-weight:bold">Жанры:</span>
                        @foreach (var genre in film.Genres)
                        {
                            <a href=@Url.Action("Filtrations", "Films", new { type = "Film",filtr = genre.NumOfGenre }) class="textstyle">@genre.Genre_Name |</a>
                        }
                    </p>
                    <p>
                        <span style="font-weight:bold">Режиссер:</span>
                        @foreach (var director in film.Casts)
                        {
                            if ((int)director.RoleInFilm == 0 && director.Person != null)
                            {
                                <a href=@Url.Action("Person", "Persons", new { personId = director.PersonId }) class="textstyle">@director.Person.Name</a>
                            }
                        }

                    </p>
                    <p>
                        <span style="font-weight:bold">Актеры:</span>
                        @foreach (var director in film.Casts)
                        {
                            if ((int)director.RoleInFilm == 2 && director.Person != null)
                            {
                                <a href=@Url.Action("Person", "Persons", new { personId = director.PersonId }) class="textstyle">@director.Person.Name |</a>
                            }
                        }
                        <a href=@Url.Action("ListActors", "Cast", new { FilmId = film.MediaID}) class="textstyle">...</a>
                    </p>
                    <p><span style="font-weight:bold">Страна:</span> @film.Country</p>
                    <p><span style="font-weight:bold">Возраст:</span> @film.Age+</p>
                    <a><img src=@film.ScoreKP border='0'></a>
                    <p><span style="font-weight:bold">Краткое описание:</span> @film.ShortDescription</p>
                    @if (ViewBag.Role == 1)
                    {
                        <a class="allcastlist" href=@Url.Action("ListCasts", "Cast", new { IdFilm = film.MediaID })>Весь каст</a>
                    }
                </div>
                <div style=" clear:both;"></div>
            </div>*@
            }
        </div>
        </div>
</body>
</html>

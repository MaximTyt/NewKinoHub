@model ICollection<NewKinoHub.Storage.Entity.Media>

<html style="font-size: 16px;">
<head>
    <link rel="stylesheet" href="~/css/favorites.css" media="screen">
    <link href="~/css/Profil.css" rel="stylesheet" />
    <script class="u-script" type="text/javascript" src="/js/jquery.js" defer=""></script>
</head>

<body>
    <div wrapper">
        @if (ViewBag.Role == 1)
        {
            <div style="position:fixed; top:20%; left:3%; ">
                <a href=@Url.Action("AddFilm", "Films") class="addfilm">Добавить Фильм</a>
            </div>
        }
            <div style="margin-top:50px; margin-bottom:30px; width: 95%;">
                <table style="margin: 0 auto;">
                    <tbody>
                        <tr>
                            <td style="width: 10% !important; left:0%;">
                                <h2 style="color: white;">Фильмы</h2>
                            </td>
                            <td style="right:0%;">
                                <nav id="menu1" style="margin-left:50px;">
                                    <ul>
                                        <li style="width: 15% !important;">
                                            <a style="background-color:black !important; color:white !important;">Сортировать: </a>@*кнопка*@
                                        </li>
                                        <li style="width: 26% !important;">
                                            <a>По дате выхода</a>
                                            <ul>
                                                @*что выпадает при наведении на кнопку дата выхода*@

                                                <li>
                                                    <a href=@Url.Action("ListFilms", "Films", new { sort = "YearOld", type = "Film"})>Сначала старые</a>
                                                </li>
                                                <li>
                                                    <a href=@Url.Action("ListFilms", "Films", new { sort = "YearNew",type = "Film" })>Сначала новые</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li style="width: 24% !important;">
                                            <a href=@Url.Action("ListFilms", "Films", new { sort = "Score",type = "Film" })>По рейтингу</a>
                                        </li>
                                        <li style="width:26% !important;">
                                            <a>По названию</a>
                                            <ul>
                                                @*что выпадает при наведении на кнопку дата выхода*@

                                                <li>
                                                    <a href=@Url.Action("ListFilms", "Films", new { sort = "NameA",type = "Film" })>А-Я</a>
                                                </li>
                                                <li>
                                                    <a href=@Url.Action("ListFilms", "Films", new { sort = "NameZ",type = "Film" })>Я-А</a>
                                                </li>
                                            </ul>
                                        </li>

                                        @* здесь можно добавить еще кнопку как дата выхода*@
                                        @*если не работает, позвать меня*@


                                    </ul>
                                </nav>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            @foreach (var film in Model.Where(st => st.MediaType == ViewBag.Type))
            {
                <div style="width: 1100px; min-height: 380px; margin-bottom:20px;">
                    <a href=@Url.Action("Film", "Films", new { IdFilm = film.MediaID }) style="display:block; width : 250px; float : left; margin-right : 20px; height:inherit;">
                        <img width="265" class="u-back-image u-expanded imagetitle" src=@film.Img>
                    </a>
                    <div class="bgtitleopacity" style=" width:800px;min-height:395px;float:right; padding-left:10px;">
                        <table style="width: 780px;">
                            <tbody>
                                <tr>
                                    <td style="width: 400px;">
                                        <p style="font-weight: bold; right:100%; left:0%;"> @film.Name </p>
                                    </td>

                                    @if (film.IsFavorites == false && ViewBag.User != null)
                                    {
                                        <td valign="top" align="right" width="30">
                                            <a>
                                                <img src="~/lib/images/Icons/favourite.png" width="30" height="30" />
                                            </a>
                                        </td>
                                    }
                                    else
                                    {
                                        if (ViewBag.User != null)
                                        {
                                            <td valign="top" align="right" width="30">
                                                <a>
                                                    <img src="~/lib/images/Icons/favourite11.png" width="30" height="30" />
                                                </a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td valign="top" align="right" width="30">
                                                <a>
                                                    <img src="~/lib/images/Icons/favourite.png" width="30" height="30" />
                                                </a>
                                            </td>
                                        }

                                    }

                                    @if (film.IsVieweds == false && ViewBag.User != null)
                                    {
                                        <td valign="top" align="right" width="30">
                                            <a>
                                                <img src="~/lib/images/Icons/eye (1).png" width="30" height="30" />
                                            </a>
                                        </td>
                                    }
                                    else
                                    {
                                        if (ViewBag.User != null)
                                        {
                                            <td valign="top" align="right" width="30">
                                                <a>
                                                    <img src="~/lib/images/Icons/eye.png" width="30" height="30" />
                                                </a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td valign="top" align="right" width="30">
                                                <a>
                                                    <img src="~/lib/images/Icons/eye (1).png" width="30" height="30" />
                                                </a>
                                            </td>
                                        }

                                    }

                                    @if (ViewBag.Role == 1)
                                    {
                                        <td align="right" width="30">
                                            <a href=@Url.Action("EditFilm", "Films", new { Id = film.MediaID })>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-brush" viewBox="0 0 16 16">
                                                    <path d="M15.825.12a.5.5 0 0 1 .132.584c-1.53 3.43-4.743 8.17-7.095 10.64a6.067 6.067 0 0 1-2.373 1.534c-.018.227-.06.538-.16.868-.201.659-.667 1.479-1.708 1.74a8.118 8.118 0 0 1-3.078.132 3.659 3.659 0 0 1-.562-.135 1.382 1.382 0 0 1-.466-.247.714.714 0 0 1-.204-.288.622.622 0 0 1 .004-.443c.095-.245.316-.38.461-.452.394-.197.625-.453.867-.826.095-.144.184-.297.287-.472l.117-.198c.151-.255.326-.54.546-.848.528-.739 1.201-.925 1.746-.896.126.007.243.025.348.048.062-.172.142-.38.238-.608.261-.619.658-1.419 1.187-2.069 2.176-2.67 6.18-6.206 9.117-8.104a.5.5 0 0 1 .596.04zM4.705 11.912a1.23 1.23 0 0 0-.419-.1c-.246-.013-.573.05-.879.479-.197.275-.355.532-.5.777l-.105.177c-.106.181-.213.362-.32.528a3.39 3.39 0 0 1-.76.861c.69.112 1.736.111 2.657-.12.559-.139.843-.569.993-1.06a3.122 3.122 0 0 0 .126-.75l-.793-.792zm1.44.026c.12-.04.277-.1.458-.183a5.068 5.068 0 0 0 1.535-1.1c1.9-1.996 4.412-5.57 6.052-8.631-2.59 1.927-5.566 4.66-7.302 6.792-.442.543-.795 1.243-1.042 1.826-.121.288-.214.54-.275.72v.001l.575.575zm-4.973 3.04.007-.005a.031.031 0 0 1-.007.004zm3.582-3.043.002.001h-.002z" />
                                                </svg>
                                            </a>
                                        </td>
                                    }

                                    @if (ViewBag.Role == 1)
                                    {
                                        <td align="right" width="30">
                                            <a href=@Url.Action("DeleteFilm", "Films", new { IdFilm = film.MediaID })>
                                                <img class="deleteicon" src="~/lib/images/Icons/close.png" />
                                            </a>
                                        </td>
                                    }

                                </tr>
                            </tbody>
                        </table>
                        <p><span style="font-weight:bold">Год:</span> @film.Year</p>

                        <p>
                            <span style="font-weight:bold">Жанр:</span>
                            @foreach (var genre in film.Genres)
                            {
                                <a href=@Url.Action("Filtrations", "Films", new { type = "Film",filtr = genre.NumOfGenre }) class="textstyle">@genre.Genre_Name |</a>
                            }
                        </p>

                        <p>
                            <span style="font-weight:bold">Режиссер:</span>
                            @foreach (var director in film.Casts)
                            {
                                if (director.RoleInFilm == ViewBag.Director)
                                {
                                    <a href=@Url.Action("Person", "Cast", new { personId = director.Id }) class="textstyle">@director.Person.Name</a>
                                }
                            }

                        </p>

                        <p>
                            <span style="font-weight:bold">Актеры:</span>
                            @foreach (var director in film.Casts)
                            {
                                if (director.RoleInFilm == ViewBag.Actor)
                                {
                                    <a href=@Url.Action("Person", "Cast", new { personId = director.Id }) class="textstyle">@director.Person.Name |</a>
                                }
                            }
                            <a href=@Url.Action("ListCast", "Cast", new { castId = film.MediaID}) class="textstyle">...</a>
                        </p>


                        <p><span style="font-weight:bold">Страна:</span> @film.Country</p>
                        <p><span style="font-weight:bold">Возраст:</span> @film.Age+</p>
                        <a><img src=@film.ScoreKP border='0'></a>
                        <p><span style="font-weight:bold">Краткое описание:</span> @film.ShortDescription</p>
                    </div>
                    <div style=" clear:both;"></div>
                </div>
            }
        </div>
</body>
</html>

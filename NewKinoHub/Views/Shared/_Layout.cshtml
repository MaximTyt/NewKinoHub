     @*конец блока с сериалами*@
     @*max-width: 1125px;*@
     <header style="height: 13% !important; width: 100%; position: absolute; top: 0; " class="border-bottom headerbg">
         <center>
             <div class="container">
                 <div style="margin-top:1% !important;">
                     <table style="width: 100%; max-width: 1100px; margin: 0 auto; position:center;">
                         <tbody>
                             <tr>
                                 <td>
                                     <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                                         <img src="~/lib/images/logo.jpg" style="border-radius : 8px; width : 200px !important; position:static;" />
                                     </a>
                                 </td>
                                 <td style="width: 100%; max-width: 420px !important;">
                                     <nav id="menu1">
                                         <ul>
                                             @*id menu - для выплывающего меню*@
                                             <li style="width: 100%; max-width: 120px !important;">
                                                 @*фильмы*@
                                                 <a asp-area="" asp-controller="Films" asp-action="ListFilms">Films</a>
                                                 <ul>
                                                     <li style="width: 100%; max-width: 120px !important;">
                                                         <a href="#filmform">Genres</a>
                                                     </li>
                                                 </ul>
                                             </li>
                                             <li style="width: 100%; max-width: 130px !important;">
                                                 @*сериалы*@
                                                 <a asp-area="" asp-controller="Films" asp-action="ListSerials">Serials</a>
                                                 <ul>
                                                     <li style="width: 100%; max-width: 130px !important;">
                                                         <a href="#serialform">Genres</a>
                                                     </li>
                                                 </ul>
                                             </li>
                                             <li style="width: 100%; max-width: 140px !important;">
                                                 <a href="#">О нас</a>
                                             </li>
                                         </ul>
                                     </nav>
                                 </td>
                                 <td style="width: 100%; width: 150px !important;">
                                     <form method="get" asp-controller="Home" asp-action="Search" style="width:250px !important;">
                                         @*Блок поиска по сайту*@
                                         <input type="search" placeholder="Search title..." value="@ViewData["Getemployeedetails"]" name="Name">       @*Блок поиска по сайту*@
                                         <button type="submit" value="Search" class="button" />                        @*Блок поиска по сайту*@
                                     </form>
                                 </td>
                                 <td style="width: 100%; max-width: 260px !important;">
                                     <nav id="menu1">
                                         <ul>
                                             <li style="width: 100%; max-width: 250px !important;">
                                                 <a asp-area="" asp-controller="Account" asp-action="Register">Sign</a> @* не трогать строчку*@
                                             </li>
                                         </ul>
                                         <ul>
                                             @if (1 == 1)
                                             {
                                                 <li style="width: 100%; max-width: 250px !important;">
                                                     <a asp-area="" asp-controller="User" asp-action="Profile"> Profile</a>
                                                 </li>
                                             }
                                             else
                                             {
                                                 <li style="width: 100%; max-width: 250px !important;">
                                                     <a style="background-color:black !important; color: white !important;">Profile</a>
                                                 </li>
                                             }
                                         </ul>
                                     </nav>
                                 </td>
                             </tr>
                         </tbody>
                     </table>
                 </div>
             </div>
         </center>
     </header>
     <div class="container" style="margin-top:100px;">
         <main role="main" class="pb-3">
             @RenderBody()
         </main>
     </div>

     <footer class="border-top footer text-muted">
         <div class="container" style="margin-top:1%;">
             &copy; 2021 - <a style="text-decoration: none;" class="text-muted" asp-controller="Home" asp-action="Index">KinoHab</a> - Все права защищены
         </div>
     </footer>
     <script class="u-script" type="text/javascript" src="~/js/bg_genres.js" defer=""></script>
     <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
     <script class="u-script" type="text/javascript" src="~/js/upbutton.js" defer=""></script>
     <script src="~/js/site.js" asp-append-version="true"></script>
     @await RenderSectionAsync("Scripts", required: false)
     <div ID="toTop"> ^ Наверх </div>
 </body>
 </html>
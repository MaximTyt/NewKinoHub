
﻿@*@model NewKinoHub.Storage.Entity.RegisterModel*@

﻿<!DOCTYPE html>

 <html lang="en">
 <head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     <title>@ViewData["Title"] - NewKinoHub</title>
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="~/css/site.css" />
     <link rel="stylesheet" href="/css/headerlist2.css" />                      @*кнопки главного меню*@
     <link rel="stylesheet" href="~/css/upbutton.css" />                        @*кнопка наверх*@
     <link rel="stylesheet" href="~/css/searchbutton.css" />                    @*форма поиска*@
     <link rel="stylesheet" href="~/css/titlestyle.css" media="screen">          @*стили для списка тайтлов*@
     <link rel="stylesheet" href="~/css/registration.css" media="screen" />     @*форма регистрации/входа*@
